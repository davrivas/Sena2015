Proceso Numero_positivo_o_negativo
	//Leer un número entero y determinar si es positivo o negativo.
	
	Definir n como entero;
	
	Escribir "Dígite número entero:";
	Leer n;
	Escribir "";
	
	Si n>0 Entonces
		Escribir "El número es positivo.";
	FinSi
	
	Si n<0 Entonces		
		Escribir "El número es negativo.";
	FinSi
	
	Si n=0 Entonces
		Escribir "El número es 0.";
	FinSi
FinProceso
